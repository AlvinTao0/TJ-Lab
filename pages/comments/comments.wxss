/* pages/comments/comments.wxss */
page {
  height: 100%;
}
.scrollEle {
  height: 100%;
}
.comments {
  margin: 20rpx 0;
  background: #fff;
}
.comments-title {
  padding:20rpx;
  font-size:30rpx;
  border-bottom:1rpx solid #eee;
}
.comments-loading {
  padding:20rpx;
  font-size:30rpx;
  border-bottom:1rpx solid #eee;
  text-align: center;
}
.comments-list {
  border-bottom:1rpx solid #eee;
  padding: 10rpx 20rpx;
}
.comments-item {
  border-bottom:1rpx solid #eee;
}
.comments-item:last-child {
  border-bottom: none;
}
.comments-item-value {
  font-size: 24rpx;
  padding: 10rpx 0;
}
.comments-item-value-color {
  color: #ff7700; 
}
.comments-item-value-date {
  color: #777;
  margin-left:30rpx;
}
.comments-item-content {
  font-size: 24rpx;
  padding: 10rpx 0;
}
.comments-item-author {
  padding: 10rpx 0;
}
.comments-item-author image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.comments-item-author text {
  font-size: 20rpx;
  color: #777;
  vertical-align: middle;
  margin-left:20rpx;
}