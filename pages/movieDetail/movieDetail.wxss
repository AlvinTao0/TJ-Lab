/* pages/movieDetail/movieDetail.wxss */
page {
  background: #f7f7f7;
}
.top{
  overflow: hidden;
  height: 400rpx;
  background: #fff;
}
.top-l{
  float: left;
  width: 38%;
  height: 100%;
}
.top-l image{
  width: 100%;
  height: 100%;
}
.top-r{
  float: left;
  width: 62%;
  height: 100%;
  padding: 10rpx 10rpx 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.key{
  color: #999;
  margin-right: 5rpx;
}
.summary{
  margin:20rpx 0;
  background: #fff;
}
.summary-title {
  padding:20rpx;
  font-size:30rpx;
  border-bottom:1rpx solid #eee;
}
.summary-content {
  font-size:26rpx;
  text-indent:2em;
  padding: 20rpx;
}
.photos{
  margin: 20rpx 0;
  background: #fff;
}
.photos-list {
  display: flex;
  flex-wrap: wrap;
}
.photos-list .img{
  width: 49.5%;
  height: 220rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  margin-right: 1%;
  margin-bottom: 1%;
}
.photos-list .img:nth-of-type(2n){
  margin-right: 0;
}
.photos-title {
  padding:20rpx;
  font-size:30rpx;
  border-bottom:1rpx solid #eee;
}
.ttl{
  font-size: 32rpx;
}
.comments {
  margin: 20rpx 0;
  background: #fff;
}
.comments-title {
  padding:20rpx;
  font-size:30rpx;
  border-bottom:1rpx solid #eee;
}
.comments-list {
  border-bottom:1rpx solid #eee;
  padding: 10rpx 20rpx;
}
.comments-item {
  border-bottom:1rpx solid #eee;
}
.comments-item:last-child {
  border-bottom: none;
}
.comments-item-value {
  font-size: 24rpx;
  padding: 10rpx 0;
}
.comments-item-value-color {
  color: #ff7700; 
}
.comments-item-value-date {
  color: #777;
  margin-left:30rpx;
}
.comments-item-content {
  font-size: 24rpx;
  padding: 10rpx 0;
}
.comments-item-author {
  padding: 10rpx 0;
}
.comments-item-author image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.comments-item-author text {
  font-size: 20rpx;
  color: #777;
  vertical-align: middle;
  margin-left:20rpx;
}
