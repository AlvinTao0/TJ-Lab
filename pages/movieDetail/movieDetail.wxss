/* pages/movieDetail/movieDetail.wxss */
.top{
  overflow: hidden;
  height: 400rpx;
}
.top-l{
  float: left;
  width: 38%;
  height: 100%;
}
.top-l image{
  width: 100%;
  height: 100%;
}
.top-r{
  float: left;
  width: 62%;
  height: 100%;
  padding: 10rpx 10rpx 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.key{
  color: #999;
  margin-right: 5rpx;
}
.summary{
  padding:10rpx;
  font-size:26rpx;
  text-indent:2em;
  margin:10rpx;
}
.photos{
  display: flex;
  flex-wrap: wrap;
}
.photos .img{
  width: 49.5%;
  height: 220rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  margin-right: 1%;
  margin-bottom: 1%;
}
.photos .img:nth-of-type(2n){
  margin-right: 0;
}
.ttl{
  font-size: 32rpx;
}